    ],
	"parameters": [
		{
			"name": "interrupt_func",
			"desc": "",
			"type": "function"
		}
	],
	"footnotes":
	[
		{
			"type": "notice",
			"text":
			[
				"`interrupt_func` requires **no** parameters, and to return **nothing**."
			],
			"code": 
			[
				"local animation\t\t-- Example Animation Handler",
				"function interrupt_func( )",
				"\tprint( \"animation interrupted!\" )",
				"end",
				"",
				"animation.on_interrupt = interrupt_func"
			]
		}
	]
}